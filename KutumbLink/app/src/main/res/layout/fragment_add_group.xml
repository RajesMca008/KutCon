<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context="kutumblink.appants.com.kutumblink.fragments.CameraMainFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:minHeight="30dp"
        android:weightSum="1">
    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:drawablePadding="15dp"
        android:layout_gravity="center"
        android:text="@string/addgroupsubtitle" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="12dp"
          android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/default_icon" />
        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:background="@mipmap/group_default_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_groupicon" />
        <kutumblink.appants.com.kutumblink.utils.CustomEditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Group Name"
            android:paddingLeft="5dp"

            android:background="@drawable/rectangle_shape"
            android:id="@+id/et_groupname"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_groupicon" />

        <ImageView
            android:id="@+id/iv_favgroups"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/default_icon"
            android:layout_alignTop="@+id/iv_groupicon"
            android:layout_alignEnd="@+id/et_groupname"
            android:layout_marginEnd="11dp" />


    </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhash"/>

     <!--   <kutumblink.appants.com.kutumblink.utils.CustomTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="Add Contacts"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhash"/>-->
        <kutumblink.appants.com.kutumblink.utils.CustomTextView

            android:id="@+id/tv_selectContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_marginRight="10dp"
            android:minHeight="45dp"
            android:gravity="center_vertical"
            android:text="Select from Contact List"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhash"/>
        <kutumblink.appants.com.kutumblink.utils.CustomTextView

            android:minHeight="45dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_createContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_marginRight="10dp"
            android:text="Create Contact"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhash"/>
        <kutumblink.appants.com.kutumblink.utils.CustomTextView
            android:minHeight="45dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_marginRight="10dp"
            android:text="Sort Order- Default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhash"/>
        <Button
            android:id="@+id/btn_removegroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"

            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/whitecolor"
            android:background="@color/redcolor"
            android:text="Remove Group"/>
    </LinearLayout>
</FrameLayout>
