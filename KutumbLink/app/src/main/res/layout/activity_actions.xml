<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="#FBFBFB"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="75dp"

>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edtcornershape"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_color"
                android:layout_weight="0.9"
                android:layout_marginLeft="15dp"
                android:text="Send Text Message"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/message_icon"/>

        </LinearLayout>
        <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_sendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_color"
                android:layout_weight="0.9"
                android:layout_marginLeft="15dp"
                android:text="Send Email"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/email_icon"/>

        </LinearLayout>
        <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_copygrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_color"
                android:layout_weight="0.9"
                android:layout_marginLeft="15dp"
                android:text="Copy to Group"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/add_group_icon"/>

        </LinearLayout>
        <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_removegroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_color"
                android:layout_weight="0.9"
                android:layout_marginLeft="15dp"
                android:text="Remove Group"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/delete_button"/>

        </LinearLayout>
        <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_addevt"
                android:layout_width="wrap_content"
                android:textColor="@color/black_color"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="0.9"
                android:layout_marginLeft="15dp"
                android:text="Add Event"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/events_icon"/>

        </LinearLayout>
        <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:orientation="horizontal">
            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:id="@+id/tv_eci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.9"
                android:textColor="@color/black_color"
                android:layout_marginLeft="15dp"
                android:text="Email Contact Info"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/note"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

