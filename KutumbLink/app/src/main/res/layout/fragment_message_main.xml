<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/whitecolor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:minHeight="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@mipmap/messages_btn_new"/>

            <kutumblink.appants.com.kutumblink.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:drawableRight="@drawable/r_icon"
                android:layout_marginRight="10dp"
                android:text="@string/messages_add_text" />

        </LinearLayout>

        <View
            android:layout_below="@id/add_layout"
            android:id="@+id/view1"
            android:layout_width="match_parent" android:background="#000000"
            android:layout_height="0.5dp"/>
        <ListView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:id="@+id/listView"
            android:dividerHeight="0.5dp"
            android:divider="#000000"
            android:layout_height="wrap_content">

        </ListView>
        <View
            android:layout_below="@id/listView"
            android:id="@+id/bottom_view"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent" android:background="#000000"
            android:layout_height="0.5dp"/>
    </RelativeLayout>


</FrameLayout>
