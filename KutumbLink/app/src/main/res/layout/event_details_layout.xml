<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:isScrollContainer="false"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
    <Button
        android:id="@+id/btn_ations"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_margin="25dp"
        android:background="@drawable/action_drop_dwon" />

    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="Event Name" />
    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#000000"/>

    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:text="Event Description:" />

    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_color"
        android:text="Event Description Text" />

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#000000"/>

    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:text="Event Contacts:" />


    <kutumblink.appants.com.kutumblink.utils.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_event_contactinfo"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="20sp"
        android:lineSpacingExtra="12dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_color"
        android:text="Contact info 1 \nContact info 2" />

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#000000"/>
    <ImageView
        android:id="@+id/btn_delete_event"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:src="@drawable/delete_event_button"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
