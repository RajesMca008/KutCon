<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kutumblink.appants.com.kutumblink.fragments.EventsMainFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        >

        <kutumblink.appants.com.kutumblink.utils.CustomTextView
            android:id="@+id/tv_goupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_photo"
            android:typeface="normal"
            android:paddingLeft="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_centerVertical="true"

            android:layout_alignParentStart="true" />



        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="32dp"
            android:src="@drawable/r_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"

            android:layout_height="32dp" />


        <kutumblink.appants.com.kutumblink.utils.CustomTextView
            android:id="@+id/tv_totalcontacts"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="55"
            android:gravity="center_horizontal|center_vertical"

            android:minHeight="30dp"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:paddingBottom="2sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:background="#dcdada"
            android:layout_marginRight="35dp"
            android:layout_alignRight="@id/arrow_icon"
            />

    </RelativeLayout>

</FrameLayout>
